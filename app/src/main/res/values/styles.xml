<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/pion_basic_deep_blue</item>
        <item name="colorPrimaryDark">@color/pion_basic_deep_blue</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/basic_background</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>




    <style name="IntroAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/pion_basic_deep_blue</item>
        <item name="colorPrimaryDark">@color/pion_basic_deep_blue</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/pion_basic_soft_blue</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>


    <style name="AppThemeTans" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/pion_basic_deep_blue</item>
        <item name="colorPrimaryDark">@color/pion_basic_deep_blue</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="colorPrimary">@color/pion_basic_deep_blue</item>
        <item name="colorPrimaryDark">@color/pion_basic_deep_blue</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/start_splash</item>
    </style>

    <style name="Transparent" parent="@style/Theme.AppCompat">
        <item name="windowNoTitle">false</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="Theme.CustomDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="EditTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">#D9121111</item>
        <item name="colorControlNormal">#ffffff</item>
    </style>

    <style name="EditTheme_search" parent="Widget.AppCompat.EditText">
        <item name="colorAccent">#808080</item>
        <item name="colorControlNormal">#ffffff</item>
        <item name="colorControlActivated">#ffffff</item>
        <item name="android:textColorHighlight">#ffffff</item>
    </style>

    <style name="filter_text" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">20dp</item>
        <item name="background">@drawable/filter_text_back</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="progressBar" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:indeterminateTint">@color/white</item>
        <item name="android:layout_width">@dimen/height_small</item>
        <item name="android:layout_height">@dimen/height_small</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="fab_filter_textView" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_height">60dp</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">19dp</item>
        <item name="android:layout_marginRight">60dp</item>
        <item name="android:layout_gravity">bottom|right</item>
    </style>

    <style name="auction_list_text_size" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">17dp</item>
    </style>

    <style name="top_logo" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_gravity">left|center</item>
        <item name="android:src">@drawable/logo</item>
    </style>

    <style name="button_font_big" parent="TextAppearance.AppCompat.Button">
        <item name="android:letterSpacing">0.1</item>
        <item name="elevation">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">@dimen/height_big</item>
        <item name="background">@drawable/button_ripple_effect_white</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/basic_gray</item>
    </style>

    <style name="button_font_small" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="background">@drawable/back_blue_round</item>
        <item name="android:textSize">13dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:textColor">@color/basic_gray</item>
    </style>

    <style name="edit_style" parent="Widget.AppCompat.EditText">
        <item name="android:layout_height">35dp</item>
        <item name="android:textSize">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/basic_gray</item>
        <item name="background">@drawable/text_line</item>
        <item name="singleLine">true</item>
    </style>


    <style name="btn_default" parent="font_default">
        <item name="background">@drawable/back_blue_round</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">@dimen/height_default</item>
        <item name="singleLine">true</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="elevation">50dp</item>
    </style>

    <style name="btn_big" parent="font_big">
        <item name="android:layout_height">@dimen/height_big</item>
        <item name="singleLine">true</item>
        <item name="android:letterSpacing">0.1</item>
    </style>

    <style name="btn_small" parent="font_small">
        <item name="android:textSize">@dimen/font_small</item>
        <item name="background">@drawable/back_blue_round</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">@dimen/height_small</item>
        <item name="singleLine">true</item>
        <item name="elevation">50dp</item>
    </style>


    <style name="font_default">
        <item name="android:textColor">@color/basic_gray</item>
        <item name="android:textSize">@dimen/font_default</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="font_big">
        <item name="android:textColor">@color/basic_gray</item>
        <item name="android:textSize">@dimen/font_big</item>
    </style>

    <style name="font_small">
        <item name="android:textColor">@color/basic_gray</item>
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="font_title">
        <item name="android:textColor">@color/pion_basic_soft_blue</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/font_title</item>
    </style>

    <style name="font_title_x">
        <item name="android:textColor">@color/white</item>
        <item name="android:lineSpacingExtra">5dp</item>
        <item name="android:textSize">@dimen/font_title_x</item>
    </style>

    <style name="font_title_xx">
        <item name="android:textColor">@color/white</item>
        <item name="android:lineSpacingExtra">10dp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textSize">@dimen/font_title_xx</item>
    </style>

    <!-- textInputLayout 텍스트 컬러 변경-->
    <style name="TextAppearance.App.TextInputLayout" parent="@android:style/TextAppearance">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/pion_basic_soft_blue</item>
        <item name="android:textSize">@dimen/font_default</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="SwitchTheme" parent="Theme.AppCompat.Light">
        <item name="android:colorControlActivated">@color/pion_basic_soft_blue</item>
    </style>
</resources>
