                            <TextView
                                style="@style/reg_detail_tv_left"
                                android:layout_width="0dp"
                                android:layout_weight="40"
                                android:text="기존대출\n(근저당포함)" />

                            <TextView
                                android:id="@+id/tv_reg_pre_loan_price"
                                style="@style/reg_detail_tv_right"
                                android:layout_width="0dp"
                                android:layout_weight="60"
                                android:text="2,000 만원" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.1dp"
                            android:background="#8F808080" />

                        <LinearLayout
                            style="@style/setting_linearlayout"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/reg_detail_tv_left"
                                android:layout_width="0dp"
