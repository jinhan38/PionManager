                                        android:layout_height="match_parent"
                                        android:layout_weight="20"
                                        android:gravity="center">

                                        <FrameLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent">

                                            <ImageView
                                                android:id="@+id/iv_status_select_auction_out"
                                                style="@style/status_circle_size"
                                                android:scaleType="center"
                                                android:src="@drawable/circle_status_out" />

                                            <ImageView
                                                android:id="@+id/iv_status_circle_select_auction"
                                                style="@style/status_circle_size"
                                                android:scaleType="center"
                                                android:src="@drawable/circle_status_in"
                                                android:visibility="invisible" />

                                        </FrameLayout>
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="20"
                                        android:gravity="center">

                                        <FrameLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent">

                                            <ImageView
                                                android:id="@+id/iv_status_receipt_paper_out"
                                                style="@style/status_circle_size"
                                                android:scaleType="center"
                                                android:src="@drawable/circle_status_out" />

                                            <ImageView
                                                android:id="@+id/iv_status_circle_receipt_paper"
                                                style="@style/status_circle_size"
                                                android:scaleType="center"
                                                android:src="@drawable/circle_status_in"
                                                android:visibility="invisible" />

                                        </FrameLayout>
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="20"
                                        android:gravity="center">

                                        <FrameLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent">

                                            <ImageView
                                                android:id="@+id/iv_status_check_paper_out"
                                                style="@style/status_circle_size"
                                                android:scaleType="center"
                                                android:src="@drawable/circle_status_out" />

                                            <ImageView
                                                android:id="@+id/iv_status_circle_check_paper"
                                                style="@style/status_circle_size"
                                                android:scaleType="center"
                                                android:src="@drawable/circle_status_in"
                                                android:visibility="invisible" />

                                        </FrameLayout>
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="20"
                                        android:gravity="center">

                                        <FrameLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent">

                                            <ImageView
                                                android:id="@+id/iv_status_agree_loan_out"
                                                style="@style/status_circle_size"
                                                android:scaleType="center"
                                                android:src="@drawable/circle_status_out" />

                                            <ImageView
                                                android:id="@+id/iv_status_circle_agree_loan"
                                                style="@style/status_circle_size"
                                                android:scaleType="center"
                                                android:src="@drawable/circle_status_in"
                                                android:visibility="invisible" />

                                        </FrameLayout>
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="20"
                                        android:gravity="center">

                                        <FrameLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent">

                                            <ImageView
                                                android:id="@+id/iv_status_circle_complete_out"
                                                style="@style/status_circle_size"
                                                android:scaleType="center"
                                                android:src="@drawable/circle_status_out" />

                                            <ImageView
                                                android:id="@+id/iv_status_circle_complete"
                                                style="@style/status_circle_size"
                                                android:scaleType="center"
                                                android:src="@drawable/circle_status_in"
                                                android:visibility="invisible" />

                                        </FrameLayout>
                                    </LinearLayout>


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="70dp"
                                    android:layout_gravity="center"
                                    android:orientation="horizontal"
                                    android:paddingTop="40dp"
                                    android:weightSum="120">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="20"
                                        android:gravity="center">

                                        <FrameLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent">

                                            <TextView
                                                android:id="@+id/tv_status_bidding"
                                                style="@style/font_small"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="입찰"
                                                android:textStyle="" />

                                        </FrameLayout>
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="20"
                                        android:gravity="center">

                                        <FrameLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent">

                                            <TextView
                                                android:id="@+id/tv_status_select_auction"
                                                style="@style/font_small"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="낙찰" />

                                        </FrameLayout>
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="20"
                                        android:gravity="center">

                                        <FrameLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent">

                                            <TextView
                                                android:id="@+id/tv_status_receipt_paper"
                                                style="@style/font_small"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="서류\n접수" />

                                        </FrameLayout>
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="20"
                                        android:gravity="center">

                                        <FrameLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent">

                                            <TextView
                                                android:id="@+id/tv_status_check_paper"
                                                style="@style/font_small"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="심사" />

                                        </FrameLayout>
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="20"
                                        android:gravity="center">

                                        <FrameLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent">

                                            <TextView
                                                android:id="@+id/tv_status_agree_loan"
                                                style="@style/font_small"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="승인\n완료" />

                                        </FrameLayout>
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="20"
                                        android:gravity="center">

                                        <FrameLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent">

                                            <TextView
                                                android:id="@+id/tv_status_complete"
                                                style="@style/font_small"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="대출\n완료" />

                                        </FrameLayout>
                                    </LinearLayout>

                                </LinearLayout>

                            </FrameLayout>


                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.1dp"
                            android:background="#8F808080" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="5dp"
                            android:gravity="center"
                            android:minHeight="60dp"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/reg_detail_tv_left"
                                android:layout_width="0dp"
                                android:layout_weight="35"
                                android:text="주소" />

                            <TextView
                                android:id="@+id/tv_reg_address"
                                style="@style/reg_detail_tv_right"
                                android:layout_width="0dp"
                                android:layout_weight="65"
                                android:breakStrategy="balanced"
                                android:lineSpacingExtra="5dp"
                                android:inputType="textMultiLine"
                                android:scrollbars="vertical"
                                android:text="인천 계양구 갈개언덕길 9 (작전동, 남진아파트) 202동 101호 1층" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.1dp"
                            android:background="#8F808080" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:minHeight="60dp"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/reg_detail_tv_left"
                                android:layout_width="0dp"
                                android:layout_weight="35"
                                android:text="최근 실거래가" />

                            <TextView
                                android:id="@+id/tv_latestDealPrice"
                                style="@style/reg_detail_tv_right"
                                android:layout_width="0dp"
                                android:layout_weight="65"
                                android:breakStrategy="balanced"
                                android:inputType="textMultiLine"
                                android:lineSpacingExtra="5dp"
                                android:scrollbars="vertical"
                                android:text="10,000만원 (2020-01-01 전용 71.848 m2 기준)" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.1dp"
                            android:background="#8F808080" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:minHeight="60dp"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/reg_detail_tv_left"
                                android:layout_width="0dp"
                                android:layout_weight="40"
                                android:text="공시지가" />

                            <TextView
                                android:id="@+id/tv_landPrice"
                                style="@style/reg_detail_tv_right"
                                android:layout_width="0dp"
                                android:layout_weight="60"
                                android:breakStrategy="balanced"
                                android:inputType="textMultiLine"
                                android:scrollbars="vertical"
                                android:text="1,000,000원 " />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.1dp"
                            android:background="#8F808080" />

                        <LinearLayout
                            style="@style/setting_linearlayout"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/reg_detail_tv_left"
                                android:layout_width="0dp"
                                android:layout_weight="40"
