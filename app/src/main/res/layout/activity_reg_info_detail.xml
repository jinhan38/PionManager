                    </LinearLayout>

                    <FrameLayout
                        android:id="@+id/reg_info_detail_fragment_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <FrameLayout
                        android:id="@+id/reg_info_detail_fragment_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

