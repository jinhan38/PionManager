                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="top|right"
                                    android:text="서류 미접수"
                                    android:textColor="@color/my_red_light"
                                    android:textSize="17dp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <TextView
