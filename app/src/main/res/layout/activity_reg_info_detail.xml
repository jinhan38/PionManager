<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegInfoDetail">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:weightSum="100">

            <ImageButton
                android:id="@+id/ibtn_back"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="13"
                android:background="@drawable/btn_selector_white"
                android:elevation="-10dp"
                android:src="@drawable/arrow_left_black"
                tools:ignore="NestedWeights" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="60"
                android:elevation="-10dp"
                android:gravity="center|left"
                android:text="물건정보"
                android:textSize="@dimen/font_big"
                tools:ignore="RtlHardcoded" />

        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:fillViewport="true"
            android:scrollbarSize="5dp"
            android:scrollbars="vertical">

            <FrameLayout
                android:id="@+id/fm_parent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:elevation="100dp"
                    android:indeterminateTint="@color/pion_basic_soft_blue" />

                <LinearLayout
                    android:id="@+id/ll_reg_detail_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/tv_reg_detail_info_focus"
                            style="@style/font_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:paddingLeft="10dp"
                            android:text="등록정보"
                            android:textColor="@color/pion_basic_soft_blue" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            android:layout_marginTop="5dp"
                            android:background="#34808080" />

                        <LinearLayout
                            style="@style/setting_linearlayout"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/reg_detail_tv_left"
                                android:layout_width="0dp"
                                android:layout_weight="40"
                                android:text="등록번호" />

                            <TextView
                                android:id="@+id/tv_reg_num"
                                style="@style/reg_detail_tv_right"
                                android:layout_width="0dp"
                                android:layout_weight="60"
                                android:text="No. 200319-00101" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.1dp"
                            android:background="#8F808080" />

                        <LinearLayout
                            style="@style/setting_linearlayout"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/reg_detail_tv_left"
                                android:layout_width="0dp"
                                android:layout_weight="40"
                                android:text="고객명" />

                            <TextView
                                android:id="@+id/tv_reg_member_name"
                                style="@style/reg_detail_tv_right"
                                android:layout_width="0dp"
                                android:layout_weight="60"
                                android:text="홍길동" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.1dp"
                            android:background="#8F808080" />

                        <LinearLayout
                            style="@style/setting_linearlayout"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/reg_detail_tv_left"
                                android:layout_width="0dp"
                                android:layout_weight="40"
                                android:text="등록일" />

                            <TextView
                                android:id="@+id/tv_reg_date"
                                style="@style/reg_detail_tv_right"
                                android:layout_width="0dp"
                                android:layout_weight="60"
                                android:text="2020-05-01" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.1dp"
                            android:background="#8F808080" />


                            <LinearLayout
                                style="@style/setting_linearlayout"
                                android:orientation="horizontal">

                                <TextView
                                    style="@style/reg_detail_tv_left"
                                    android:layout_width="0dp"
                                    android:layout_weight="40"
                                    android:text="등록타입" />

                                <LinearLayout
                                    style="@style/reg_detail_tv_right"
                                    android:layout_width="0dp"
                                    android:layout_weight="60"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/tv_type_first"
                                        android:layout_width="22dp"
                                        android:layout_height="22dp"
                                        android:background="@drawable/type_b"
                                        android:gravity="center"
                                        android:text="B"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/font_big" />

                                    <TextView
                                        android:id="@+id/tv_type_second"
                                        android:layout_width="22dp"
                                        android:layout_height="22dp"
                                        android:layout_marginLeft="3dp"
                                        android:background="@drawable/type_secound"
                                        android:gravity="center"
                                        android:text="1"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/font_big" />

                                </LinearLayout>

                            </LinearLayout>
                        <View
