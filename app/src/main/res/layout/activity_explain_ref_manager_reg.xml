<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/text_line"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:theme="@style/AppTheme.NoActionBar"
    tools:ignore="MissingDefaultResource">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="@integer/preferences_left_pane_weight"
        android:orientation="vertical"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@drawable/back_red_round" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/info_icon_gray"
                android:drawablePadding="10dp"
                android:gravity="center|left"
                android:paddingVertical="15dp"

                android:paddingLeft="10dp"
                android:text="비즈파트너 등록"
                android:textColor="@color/basic_gray"
                android:textSize="@dimen/font_title_x" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/drop_shadow" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="30dp">

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="30dp"
                android:text="@string/refManagerAddForBizPartner_1"
                android:textSize="@dimen/font_big" />

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="30dp"
                android:text="@string/refManagerAddForBizPartner_2"
                android:textSize="@dimen/font_big" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/drop_shadow" />

        <LinearLayout
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="100">

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_small"
                android:layout_marginRight="20dp"
                android:layout_weight="40"
                android:background="@drawable/btn_selector_red"
                android:gravity="center"
                android:letterSpacing="0.2"
                android:text="@string/no"
                android:textColor="@color/white"
                android:textSize="@dimen/font_default"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_confirm"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_small"
                android:layout_marginLeft="20dp"
                android:layout_weight="40"
                android:background="@drawable/btn_selector_blue"
                android:gravity="center"
                android:letterSpacing="0.2"
                android:text="@string/yes"
                android:textColor="@color/white"
                android:textSize="@dimen/font_default"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>