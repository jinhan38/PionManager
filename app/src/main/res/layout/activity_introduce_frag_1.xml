<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context=".PionIntroduce.Introduce_Frag_1">


    <FrameLayout
        android:id="@+id/animated_view_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/pion_basic_soft_blue">

        <ImageView
            android:id="@+id/transition_backgroud"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="100">


            <TextView
                android:id="@+id/introduce_frag_1_top"
                style="@style/font_title_xx"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="30"
                android:breakStrategy="balanced"
                android:gravity="bottom|left"
                android:inputType="textMultiLine"
                android:paddingLeft="30dp"
                android:paddingBottom="40dp"
                android:text="@string/introduce_frag_1_top" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="30"
                android:gravity="top"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/introduce_frag_1_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="10dp"
                    android:src="@drawable/introduce_1" />

            </LinearLayout>

            <TextView
                android:id="@+id/introduce_frag_1_bottom"
                style="@style/font_title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="40"
                android:breakStrategy="balanced"
                android:gravity="top|left"
                android:inputType="textMultiLine"
                android:paddingHorizontal="30dp"
                android:paddingTop="60dp"
                android:text="@string/introduce_frag_1_bottom"
                android:textColor="@color/white"
                android:textStyle="normal" />

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="false"/>
    </FrameLayout>
</LinearLayout>