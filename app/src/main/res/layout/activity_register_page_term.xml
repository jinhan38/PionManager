<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Registration.RegisterPage_1">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_big"
        android:orientation="horizontal"
        android:weightSum="100">

        <ImageButton
            android:id="@+id/ibtn_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="13"
            android:background="@android:color/transparent"
            android:src="@drawable/arrow_left_black" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="60"
            android:gravity="center|left"
            android:text="더파이온 약관"
            android:textSize="@dimen/font_big" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="13"
                        android:gravity="center|right"
                        android:orientation="vertical"
                        android:paddingLeft="25dp"
                        android:paddingRight="10dp">

                        <CheckBox
                            android:id="@+id/checkBox_all"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:button="@drawable/checkbox_custom"
                            android:gravity="center|left"
                            android:paddingVertical="5dp"
                            android:paddingLeft="10dp"
                            android:text="전체 동의합니다."
                            android:textColor="@color/basic_gray"
                            android:textSize="@dimen/font_big" />

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:breakStrategy="balanced"
                    android:inputType="textMultiLine"
                    android:lineSpacingExtra="5dp"
                    android:paddingHorizontal="30dp"
                    android:text="@string/register_page_intro"
                    android:textSize="@dimen/font_default" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginHorizontal="25dp"
            android:layout_marginVertical="20dp"
            android:background="@color/basic_gray_transparent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="78"
                    android:gravity="center|left"
                    android:orientation="vertical"
                    android:paddingLeft="25dp"
                    android:paddingRight="10dp">

                    <CheckBox
                        android:id="@+id/checkBox_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingVertical="5dp"
                        android:button="@drawable/checkbox_custom"
                        android:gravity="center|right"
                        android:paddingLeft="10dp"
                        android:textSize="@dimen/font_default"
                        android:singleLine="true"
                        android:text="[필수] 서비스 이용약관 동의"
                        android:textColor="@color/basic_gray" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_see_terms_1"
                    android:layout_width="0dp"
                    android:paddingVertical="5dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="22"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:gravity="center|left"
                    android:paddingLeft="10dp"
                    android:text="약관보기"
                    android:textSize="@dimen/font_default" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="78"
                    android:gravity="center|left"
                    android:orientation="vertical"
                    android:paddingLeft="25dp"
                    android:paddingRight="10dp">

                    <CheckBox
                        android:id="@+id/checkBox_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingVertical="5dp"
                        android:button="@drawable/checkbox_custom"
                        android:gravity="center|right"
                        android:paddingLeft="10dp"
                        android:singleLine="true"
                        android:textSize="@dimen/font_default"
                        android:text="[필수] 개인정보 수집 및 이용안내에 동의"
                        android:textColor="@color/basic_gray" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_see_terms_2"
                    android:layout_width="0dp"
                    android:paddingVertical="5dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="22"
                    android:clickable="true"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:gravity="center|left"
                    android:paddingLeft="10dp"
                    android:text="약관보기"
                    android:textSize="@dimen/font_default" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="78"
                    android:gravity="center|left"
                    android:orientation="vertical"
                    android:paddingLeft="25dp"
                    android:paddingRight="10dp">

                    <CheckBox
                        android:id="@+id/checkBox_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingVertical="5dp"
                        android:button="@drawable/checkbox_custom"
                        android:gravity="center|right"
                        android:paddingLeft="10dp"
                        android:singleLine="true"
                        android:textSize="@dimen/font_default"
                        android:text="[필수] 개인정보의 제3자 제공에 동의"
                        android:textColor="@color/basic_gray" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_see_terms_3"
                    android:layout_width="0dp"
                    android:paddingVertical="5dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="22"
                    android:clickable="true"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:gravity="center|left"
                    android:paddingLeft="10dp"
                    android:text="약관보기"
                    android:textSize="@dimen/font_default"
                    tools:ignore="RtlHardcoded,RtlSymmetry,SpUsage" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="78"
                    android:gravity="center|left"
                    android:orientation="vertical"
                    android:paddingLeft="25dp"
                    android:paddingRight="10dp">

                    <CheckBox
                        android:id="@+id/checkBox_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingVertical="5dp"
                        android:button="@drawable/checkbox_custom"
                        android:gravity="center|right"
                        android:paddingLeft="10dp"
                        android:singleLine="true"
                        android:textSize="@dimen/font_default"
                        android:text="[선택] 광고성 정보수신에 동의"
                        android:textColor="@color/basic_gray" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_see_terms_4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="22"
                    android:clickable="true"
                    android:gravity="center|left"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:paddingVertical="5dp"
                    android:paddingLeft="10dp"
                    android:text="약관보기"
                    android:textSize="@dimen/font_default" />

            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="40dp"
            android:layout_marginTop="40dp">


            <ProgressBar
                android:id="@+id/progressBar"
                style="@style/progressBar" />

            <Button
                android:id="@+id/bt_next_register_page_1"
                style="@style/btn_big"
                android:layout_width="match_parent"
                android:layout_gravity="top"
                android:background="@drawable/btn_selector_blue"
                android:elevation="50dp"
                android:text="본인인증"
                android:textColor="@android:color/white"
                tools:visibility="visible" />

        </FrameLayout>
    </LinearLayout>


</LinearLayout>