<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context=".Menu.MyInfo.ChangePW">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_big"
        android:orientation="horizontal"
        android:weightSum="100">

        <ImageButton
            android:id="@+id/ibtn_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="13"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/arrow_left_black" />

        <TextView
            style="@style/font_big"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="60"
            android:gravity="center|left"
            android:text="비밀번호 변경" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:paddingStart="20dp"
            android:text="@string/change_pw_coment"
            android:textSize="@dimen/font_big"
            tools:ignore="RtlHardcoded,RtlSymmetry" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="17"
        android:orientation="vertical"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="10"
            android:orientation="horizontal"
            android:weightSum="100">

            <EditText
                android:id="@+id/et_change_pw"
                style="@style/EditTheme"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_big"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_weight="80"
                android:layout_gravity="center"
                android:gravity="center|left"
                android:inputType="textPassword"
                android:maxLength="20"
                android:singleLine="true"
                android:textSize="@dimen/font_big"
                tools:ignore="NestedWeights,RtlHardcoded,TextFields" />

            <Button
                android:id="@+id/bt_pw_confirm_register"
                style="@style/button_font_small"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_default"
                android:layout_gravity="center"
                android:layout_weight="20"
                android:layout_marginBottom="3dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/btn_selector_blue"
                android:text="@string/password_confirm"
                android:textColor="@color/white" />


        </LinearLayout>


        <TextView
            android:id="@+id/tv_phone_error"
            style="@style/font_big"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="23dp"
            android:singleLine="true"
            android:text="비밀번호를 확인해주세요"
            android:textColor="@color/my_red"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_big"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_change_pw"
            style="@style/btn_big"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/back_gray_round"
            android:text="확인"
            android:textColor="@color/basic_gray"
            android:textSize="@dimen/font_big" />

    </LinearLayout>


</LinearLayout>