<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="filter_text" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">15dp</item>
        <item name="background">@drawable/filter_text_back</item>
        <item name="android:paddingHorizontal">20dp</item>
        <item name="android:paddingVertical">5dp</item>
    </style>


    <style name="stage_text" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">20dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginHorizontal">10dp</item>
        <item name="android:layout_marginVertical">5dp</item>
    </style>

    <style name="stage_text_accent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">25dp</item>
        <item name="android:textColor">@color/my_red</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginHorizontal">10dp</item>
        <item name="android:layout_marginVertical">5dp</item>
    </style>


    <style name="teamList_child_top_date" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">17dp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="teamList_child_data_summary" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">17dp</item>
    </style>

    <style name="teamList_header_back" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">17dp</item>
    </style>

    <style name="myInfo" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">@dimen/font_big</item>
        <item name="android:textColor">@color/basic_gray</item>
    </style>

    <style name="myInfo_bank" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">14dp</item>
    </style>

    <style name="setting_linearlayout" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="background">@color/white</item>
        <item name="android:layout_height">@dimen/height_big</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:weightSum">100</item>
    </style>

    <style name="setting_linearlayout_comInfo" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:weightSum">100</item>
    </style>

    <style name="reg_detail_tv_left" parent="font_big">
        <item name="background">@color/basic_background</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:gravity">center|left</item>
        <item name="android:width">0dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/font_big</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="reg_detail_tv_right" parent="font_big">
        <item name="background">@color/basic_background</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:gravity">center|right</item>
        <item name="android:width">0dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="menu_button" parent="font_default">
        <item name="background">@android:color/transparent</item>
        <item name="android:drawablePadding">15dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:textColor">@color/basic_gray</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:gravity">left|center</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="explain_bidding" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textColor">@color/basic_gray</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:gravity">left|center</item>
        <item name="android:textSize">@dimen/font_big</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:breakStrategy">balanced</item>
        <item name="android:inputType">textMultiLine</item>
    </style>

    <style name="button_font_big" parent="TextAppearance.AppCompat.Button">
        <item name="android:letterSpacing">0.1</item>
        <item name="elevation">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">@dimen/height_big</item>
        <item name="background">@drawable/button_ripple_effect_white</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/basic_gray</item>
        <item name="android:layout_marginHorizontal">40dp</item>
    </style>

    <style name="btn_small" parent="font_small">
        <item name="android:textSize">@dimen/font_small</item>
        <item name="background">@drawable/back_blue_round</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">@dimen/height_small</item>
        <item name="singleLine">true</item>
        <item name="android:paddingVertical">3dp</item>
        <item name="elevation">50dp</item>
    </style>

    <style name="status_circle_size">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="financail_partner" parent="Theme.AppCompat.NoActionBar">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginHorizontal">25dp</item>
    </style>


</resources>